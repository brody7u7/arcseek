<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carlos.arcseek.MainActivity"
    android:id="@+id/root"
    android:background="#323232">

    <com.example.carlos.arcseek.GradientProgressBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        app:minProgress="1"
        app:maxProgress="5"
        app:progressBackgroundColor="#929292"
        app:progressStartColor="@color/colorStartProgress"
        app:progressEndColor="@color/colorEndProgress"
        app:borderOffset="2dp"
        app:progress="5"
        app:cornerRadius="10dp"
        app:hasRadiance="true"
        app:radianceStartColor="@color/colorStartRadiance"
        app:radianceEndColor="@color/colorEndRadiance"/>
</android.support.constraint.ConstraintLayout>
